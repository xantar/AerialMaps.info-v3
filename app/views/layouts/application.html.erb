<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Aerialmaps.info</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
<div class="navbar navbar-inverse" role="navigation">
  <div class="container">
	<div class="navbar-header">
	      <%= link_to 'AerialMaps.info', user_maps_path(params[:user_id],params[:maps_id]), class: 'navbar-brand' %>
	    </div>
	    <div id="navbar">
		<ul class="nav navbar-nav pull-right">
		  <li><%= image_tag current_user.image_url, alt: current_user.name, size: "50x50" %></li>
		  <li><%= link_to 'Log Out', logout_path, method: :delete %></li>
		</ul>
	    </div>
  </div>
</div>
<% else %>

<div class="navbar navbar-inverse" role="navigation">
  <div class="container">
	<div class="navbar-header">
	      <%= link_to 'AerialMaps.info', root_path, class: 'navbar-brand' %>
	    </div>
	    <div id="navbar">
		<ul class="nav navbar-nav">
		</ul>
	    </div>
  </div>
</div>

<% end %>

<div class="container">

  <%= yield %>
</div>

<div id="footer">
  <div class="container">
    <p class="text-muted"></p>
  </div>
</div>

</body>
</html>
