<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Aerialmaps.info</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="clouds" style="background: #c9dbe9;	background: -webkit-linear-gradient(top, #c9dbe9 0%, #fff 100%);	background: -linear-gradient(top, #c9dbe9 0%, #fff 100%);	background: -moz-linear-gradient(top, #c9dbe9 0%, #fff 100%);">

<% if current_user %>
<div class="navbar navbar-inverse" role="navigation">
  <div class="container-fluid">
	<div class="navbar-header">
          ::before
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-9" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
	      <%= link_to 'AerialMaps.info', user_maps_path(current_user.id), class: 'navbar-brand' %>
          ::after
	    </div>
	    <div id="collapse navbar-collapse">
          ::before
		<ul class="nav navbar-nav pull-right">
                <li><%= link_to 'Camera Support', cameras_path %></li>
                <li><%= link_to 'FAQ', faq_path %></li>
                <li><%= link_to 'Gallery', gallery_path %></li>
		  <li><%= image_tag current_user.image_url, alt: current_user.name, size: "50x50" %></li>
		  <li><%= link_to 'Log Out', logout_path, method: :delete %></li>
		</ul>
          ::after
	    </div>
  </div>
</div>
<% else %>

<div class="navbar navbar-inverse" role="navigation">
  <div class="container-fluid">
	<div class="navbar-header">
          ::before
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-9" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
	      <%= link_to 'AerialMaps.info', root_path, class: 'navbar-brand' %>
          ::after
	    </div>
	    <div id="collapse navbar-collapse">
	    </div>
  </div>
</div>

<% end %>

<div class="container-fluid">
  <%= yield %>
</div>

<div id="footer">
  <div class="container">
    <p class="text-muted"></p>
  </div>
</div>

</div>
</body>
</html>
